    <div class="jumbotron">
      <h2 class="display-7">Welcome to the <%= title %> page</h2>
      <hr>

      <!-- Home Page-->
      <% if (title == "Home") { %>
        <p>Mission Statement: Spread the power of optimism</p>
        <a href="/about">About me</a>
      <% } %>

      <!-- About Me Page-->
      <% if (title == "About") { %>
        <img src="/Assets/images/dy.jpg" alt="Pic of me">
        <p>Do Young Lee</p>
        <p>Enrolled in Software Engineering Technology</p>
        <p>Currently in 3rd semester</p>
        <p>Lives in Toronto</p>
      <% } %>
      
      <!-- Project Page -->
      <% if (title == "Projects") { %>
        <p>Project 1 : Bug smasher game created using js</p>
        <div class="container1">
          <img src="/Assets/images/p1.png" alt="project1">
        </div>
        <hr>
        <p>Project 2 : Registration Page for a website</p>
        <div class="container1">
          <img src="/Assets/images/p2.png" alt="project1">
        </div>
        <hr>
        <p>Project 2 : Photo gallery created using js</p>
        <div class="container1">
          <img src="/Assets/images/p3.png" alt="project1">
        </div>
      <% } %>
      
      <!-- Services Page -->
      <% if (title == "Services") { %>
        <h1>Services I can offer : </h1><br>
        <h4>C#, NodeJS, ExpressJS, Java, JavaScript</h4>
      <% } %>

      <!-- Contact Page -->
      <% if (title == "Contact") { %>
        <h4>Email: ehdudblue@gmail.com</h4>
        <h4>Phone: (647)999-6357</h4><br><hr>

        <fieldset>
          <h2>Contact Form</h2>
          <p>
              <label>
                  First Name:
                  <input id="firstname" type="text" />
              </label>
          </p>

          <p>
              <label>
                  Last Name:
                  <input id="lastname" type="text" />
              </label>
          </p>

          <p>
            <label>
                Contact Number:
                <input id="contactnumber" type="text" />
            </label>
          </p>

          <p>
              <label>
                  Email:
                  <input id="email" type="text" />
              </label>
          </p>

          <p>Message:</p>
          <p>
              <label>
                <textarea></textarea>
              </label>
          </p>
          <br>
          <button id="send">Send</button>
          <hr>
      </fieldset>
      <% } %>
    </div>
  </main>

